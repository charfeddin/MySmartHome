<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXTextArea?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.effect.Light.Distant?>
<?import javafx.scene.effect.Lighting?>
<?import javafx.scene.effect.Shadow?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.paint.Color?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.rafafx.HelloController">
    <top>
        <VBox alignment="CENTER_LEFT" spacing="5" style="-fx-background-color: #f0f0f0;">
            <TextField fx:id="searchField" prefHeight="40" promptText="Search posts..." style="-fx-background-radius: 20;">



            </TextField>
         <Label prefHeight="61.0" prefWidth="181.0" text="Ajouter post" textAlignment="RIGHT">
            <effect>
               <Lighting>
                  <bumpInput>
                     <Shadow>
                        <input>
                           <Lighting>
                              <bumpInput>
                                 <Shadow />
                              </bumpInput>
                              <light>
                                 <Light.Distant />
                              </light>
                           </Lighting>
                        </input>
                     </Shadow>
                  </bumpInput>
                  <light>
                     <Light.Distant>
                        <color>
                           <Color red="1.0" />
                        </color>
                     </Light.Distant>
                  </light>
               </Lighting>
            </effect>
            <font>
               <Font size="23.0" />
            </font>
         </Label>
        <JFXTextArea fx:id="textArea" editable="false" maxWidth="200" onMouseClicked="#openInsertPostWindow" prefHeight="33.0" prefWidth="200" wrapText="true" />

        </VBox>
    </top>
    <center>
        <ScrollPane fitToHeight="true" fitToWidth="true">
        <VBox fx:id="postContainer" alignment="TOP_CENTER" spacing="10" />
        </ScrollPane>
    </center>
</BorderPane>
